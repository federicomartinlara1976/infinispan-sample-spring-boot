<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- ConversionPattern convencional -->
	<!-- <param name="ConversionPattern" value="%d-%-7r %-5p [%-18t] %-30m %c{1}.%M 
		(l\u00EDnea:%-4L) %n"/> -->

	<!-- ConversionPattern convencional para "R" -->
	<!-- <param name="ConversionPattern" value="[%t] %-5p - %m%n"/> -->

	<!-- Appender para la salida por consola -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d|%p|%c{1}.%M:%L|%m %n" />
		</layout>
	</appender>

	<!-- Appender para la salida de los mensajes -->
	<appender name="allLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<param name="File" value="./appLogging.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d|%p|%c{1}.%M:%L|%m %n" />
		</layout>
	</appender>

	<appender name="errLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<param name="File" value="./appLogging-error.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="Threshold" value="ERROR" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d|%p|%c{1}.%M:%L|%m %n" />
		</layout>
	</appender>

	<appender name="hibernateLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<param name="File" value="./hibernate-error.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="Threshold" value="ERROR" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d|%p|%c{1}.%M:%L|%m %n" />
		</layout>
	</appender>

	<!-- Definicion de la categoria de excepciones -->
	<category name="net.bounceme.chronos.logging.loggingView">
		<priority value="INFO" />
		<appender-ref ref="allLog" />
	</category>

	<category name="net.bounceme.chronos.logging.business.impl">
		<priority value="INFO" />
		<appender-ref ref="allLog" />
	</category>

	<category name="org.hibernate">
		<priority value="INFO" />
		<appender-ref ref="allLog" />
	</category>
	
	<category name="org.hibernate.event">
		<priority value="INFO" />
		<appender-ref ref="allLog" />
	</category>
	
	<category name="org.hibernate.type">
		<priority value="INFO" />
		<appender-ref ref="allLog" />
	</category>

	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="allLog" />
	</root>
</log4j:configuration>